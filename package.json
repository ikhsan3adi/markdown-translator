{
  "name": "markdown-translator",
  "version": "1.0.0",
  "description": "Translate MARKDOWN/READMEs to another language",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build src/index.ts -o dist -s -m",
    "build:commit": " npm run format && npm run build && git add . && git commit",
    "start": "npx tsx src/index.ts",
    "format": "npx prettier -w src"
  },
  "keywords": [
    "readme",
    "translate",
    "translator",
    "docs"
  ],
  "author": "Ikhsan Satriadi",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@tomsun28/google-translate-api": "^1.1.2",
    "http-proxy-agent": "^4.0.1",
    "remark-parse": "^8.0.3",
    "remark-stringify": "^8.1.1",
    "simple-git": "^3.15.0",
    "tunnel": "0.0.6",
    "unified": "^9.1.0",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "eslint": "^8.57.0",
    "prettier": "3.2.5",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.4.0",
    "tsx": "^4.7.1"
  }
}